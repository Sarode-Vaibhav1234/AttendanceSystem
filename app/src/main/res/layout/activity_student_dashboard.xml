<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Top Header with Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Grid Items -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <!-- Item 1: Tests -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/viewAttendance"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Today's Attendance"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:id="@+id/academicCalendar"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic Calendar"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Item 3: Check-In/Out -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/markAttendance"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-In/Out\nMark Attendance here"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Item 4: Check-In/Out Summary -->
            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/seeAttendance"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-In/Out Summary\nSee Attendance here"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Item 5: Messages -->
            <LinearLayout
                android:id="@+id/timetable"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TimeTable\nView Timetable"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Item 6: Face Registration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:id="@+id/examSchedule"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Schedule"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/img_7"/>
    </LinearLayout>
</ScrollView>

