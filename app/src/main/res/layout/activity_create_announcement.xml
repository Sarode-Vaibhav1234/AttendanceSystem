<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/background1">

    <!-- Spinner with enhanced background -->
    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background" />

    <!-- Enhanced EditTexts -->
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginBottom="12dp"
        android:padding="14dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_marginBottom="12dp"
        android:padding="14dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:background="@drawable/edittext_background" />

    <!-- Start Time Spinner -->
    <Spinner
        android:id="@+id/spinnerStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:padding="14dp" />

    <!-- End Time Spinner (disabled, auto-filled) -->
    <Spinner
        android:id="@+id/spinnerEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:padding="14dp"
        android:enabled="false" />

    <!-- Material Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Announcement"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="14dp"
        android:backgroundTint="#2A46E7"
        app:cornerRadius="12dp"
        android:elevation="4dp" />

    <!-- Clickable TextView -->
    <TextView
        android:id="@+id/btnCreateSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject not registered? Register it"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="14sp"
        android:textColor="#1A73E8"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
