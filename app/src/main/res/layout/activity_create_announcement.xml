<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/img_12">

    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"
        android:background="@drawable/layout_border" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background" />

    <Button
        android:id="@+id/btnCreateAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Announcement"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateSubject"
        android:padding="20dp"
        android:text="Subject not registered? Register it"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/design_default_color_secondary_variant"
        android:layout_marginTop="8dp" />
</LinearLayout>