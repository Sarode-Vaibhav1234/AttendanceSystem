<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCreateAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Announcement" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateSubject"
        android:padding="20dp"
        android:text="Subject not register? Register it"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
</LinearLayout>
