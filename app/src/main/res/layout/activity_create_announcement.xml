<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/grad_back">

    <Spinner
        android:id="@+id/spinnerSubjects"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background2" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background2" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background2" />

    <EditText
        android:id="@+id/etStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="12dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background2" />

    <EditText
        android:id="@+id/etEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (yyyy-MM-dd HH:mm:ss)"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@drawable/edittext_background2" />


    <Button
        android:id="@+id/btnCreateAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Announcement"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2A46E7"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateSubject"
        android:textStyle="italic"
        android:padding="20dp"
        android:text="Subject not registered? Register it"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#0028FF"
        android:layout_marginTop="8dp" />
</LinearLayout>